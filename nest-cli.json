{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/hypnos/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/hypnos/tsconfig.app.json"
  },
  "projects": {
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    },
    "source": {
      "type": "library",
      "root": "libs/source",
      "entryFile": "index",
      "sourceRoot": "libs/source/src",
      "compilerOptions": {
        "tsConfigPath": "libs/source/tsconfig.lib.json"
      }
    },
    "hypnos": {
      "type": "application",
      "root": "apps/hypnos",
      "entryFile": "main",
      "sourceRoot": "apps/hypnos/src",
      "compilerOptions": {
        "tsConfigPath": "apps/hypnos/tsconfig.app.json"
      }
    },
    "payments": {
      "type": "application",
      "root": "apps/payments",
      "entryFile": "main",
      "sourceRoot": "apps/payments/src",
      "compilerOptions": {
        "tsConfigPath": "apps/payments/tsconfig.app.json"
      }
    }
  },
  "monorepo": true,
  "root": "apps/hypnos"
}