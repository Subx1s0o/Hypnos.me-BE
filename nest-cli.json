{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src/http",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "src/http/tsconfig.app.json"
  },
  "projects": {
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    },
    "entities": {
      "type": "library",
      "root": "libs/entities",
      "entryFile": "index",
      "sourceRoot": "libs/entities/src",
      "compilerOptions": {
        "tsConfigPath": "libs/entities/tsconfig.lib.json"
      }
    },
    "http": {
      "type": "application",
      "root": "src/http",
      "entryFile": "main",
      "sourceRoot": "src/http",
      "compilerOptions": {
        "tsConfigPath": "src/http/tsconfig.app.json"
      }
    },
    "payments": {
      "type": "application",
      "root": "src/microservices/payments",
      "entryFile": "main",
      "sourceRoot": "src/microservices/payments/src",
      "compilerOptions": {
        "tsConfigPath": "src/microservices/payments/tsconfig.app.json"
      }
    },
   
    "cloudinary": {
      "type": "application",
      "root": "src/microservices/cloudinary",
      "entryFile": "main",
      "sourceRoot": "src/microservices/cloudinary/src",
      "compilerOptions": {
        "tsConfigPath": "src/microservices/cloudinary/tsconfig.app.json"
      }
    }
  },
  "monorepo": true,
  "root": "src/http"
}