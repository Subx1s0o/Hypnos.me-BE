generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type GoldSample {
  sampleValue       String     
  weightMale        Float        
  weightFemale      Float       
}

model products {
  id                String      @id @default(auto()) @map("_id") @db.ObjectId
  title             String
  createdAt         DateTime    @default(now()) @db.Date
  updatedAt         DateTime    @updatedAt
  image             String
  price             Int
  isPriceForPair    Boolean     @default(false)
  description       String
  width             Float?      
  thickness         Float?    
  weight            Float?     
  pairWeight        Float?     
  goldSamples       GoldSample[] 
}

model users {
  id                String      @id @default(auto()) @map("_id") @db.ObjectId
  firstName         String
  secondName        String
  email             String      @unique
  password          String
  bonuses           Int         @default(0)
  role              Role        @default(user) 
  bonusesHistory    bonusesHistory[]    
  ordersHistory     ordersHistory[]     
  cart              Json[] 
  phone             String?
  birthday          DateTime? 
  referredCode      String      @unique
  referredBy        String?     
  subscribed        Boolean     @default(false)
  createdAt         DateTime    @default(now()) @db.Date
  updatedAt         DateTime    @updatedAt
}

enum Role {
  admin
  user
  owner
}

type bonusesHistory {
  amount          Int
  receivedDate    DateTime 
  description     String
}

type ordersHistory  {
  productIds      String[]
}



model promocodes {
    id                String      @id @default(auto()) @map("_id") @db.ObjectId
    code              String      @unique
    discount          Int 
    count             Int
    expirationDate    DateTime
}