generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


type GoldSample {
  sampleValue       String     
  weightMale        Float        
  weightFemale      Float       
}

model Product {
  id                String      @id @default(auto()) @map("_id") @db.ObjectId
  title             String
  createdAt         DateTime    @default(now()) @db.Date
  updatedAt         DateTime    @updatedAt
  image             String
  price             Int
  isPriceForPair    Boolean     @default(false)
  description       String
  
  width             Float?      
  thickness         Float?    
  weight            Float?     
  pairWeight        Float?     

  goldSamples       GoldSample[] 
}

model User {
  id                String      @id @default(auto()) @map("_id") @db.ObjectId
  firstName         String
  secondName        String
  email             String      @unique
  password          String
  subscribed        Boolean     @default(false)
  createdAt         DateTime    @default(now()) @db.Date
  updatedAt         DateTime    @updatedAt
}