generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Product {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title    String
  createdAt DateTime @db.Date
  updatedAt DateTime @updatedAt
  image       String
  price Int
  priceType PriceType
}

enum PriceType {
  PER_UNIT
  PER_PAIR
}
