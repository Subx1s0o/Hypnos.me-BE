model Bonus {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  amount    Int
  userId    String   @db.ObjectId
  type      BonusType
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model BonusConfig {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  type      BonusType
  givenPercentage Float
  paymentPercentage Float
  fixedAmount     Int?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}